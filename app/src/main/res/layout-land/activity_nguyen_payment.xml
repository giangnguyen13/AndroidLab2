<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NguyenPaymentActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giangPhoneTv"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/giangCardNumberTv"
        android:layout_width="384dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/hint_card_number"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/giangFullNameTv"
        app:layout_constraintStart_toStartOf="@+id/giangFullNameTv"
        app:layout_constraintTop_toBottomOf="@+id/giangFullNameTv" />

    <EditText
        android:id="@+id/giangPhoneTv"
        android:layout_width="384dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/hint_phone"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/giangPostalCodeTv"
        app:layout_constraintStart_toStartOf="@+id/giangPostalCodeTv"
        app:layout_constraintTop_toBottomOf="@+id/giangPostalCodeTv" />

    <EditText
        android:id="@+id/giangPostalCodeTv"
        android:layout_width="384dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/hint_postal_code"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/giangBillingAdressTv"
        app:layout_constraintStart_toStartOf="@+id/giangBillingAdressTv"
        app:layout_constraintTop_toBottomOf="@+id/giangBillingAdressTv" />

    <EditText
        android:id="@+id/giangBillingAdressTv"
        android:layout_width="383dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/hint_billing_address"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giangCardNumberTv" />

    <EditText
        android:id="@+id/giangFullNameTv"
        android:layout_width="386dp"
        android:layout_height="45dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/hint_fullname"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>